# This is the default template ~/.kpmpcrc, kpmpc's config file

# default keyboard mappings
map h :mvcur<-1,0><cr> w
map l :mvcur<+1,0><cr> w
map k :mvcur<0,-1><cr> w
map j :mvcur<0,+1><cr> w

map <space> :play<cr> w
map <cr> :play<cr> w
map p :play<cr> w

map <c-j> <cr> p
map <enter> <cr> p

map <c-c> <clear> p
map <esc> <clear> p

map qq :quit<cr> w
map ZZ :quit<cr> w

# default art file paths
art front.jpg
art front.png
art cover.jpg
art cover.png
art folder.jpg
art folder.png
